<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="461.0" prefWidth="932.0"
            stylesheets="@../../../../../../../Users/MARIEM/IdeaProjects/Eventus/src/main/resources/css/Styles.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="event.aura.Eventus.Controllers.FormController">

    <!-- Sidebar -->
    <fx:include source="Sidebar.fxml" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />

    <!-- Main Content -->
    <VBox layoutX="250.0" spacing="20" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="40.0">

        <!-- Header -->
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="ðŸ“° New Actuality" />

        <!-- Form Container -->
        <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 4);">

            <!-- Post Title -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 14; -fx-text-fill: #34495E;" text="Name of the Post" />
                <TextField fx:id="inventory_col_productName"
                           promptText="Enter post title"
                           style="-fx-background-radius: 8; -fx-padding: 10; -fx-background-color: #f8f9fa;" />
            </VBox>

            <!-- Description -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 14; -fx-text-fill: #34495E;" text="Description" />
                <TextField fx:id="inventory_col_productDescription"
                           prefHeight="139.0"
                           style="-fx-background-radius: 8; -fx-padding: 10; -fx-background-color: #f8f9fa;" />
            </VBox>

            <!-- Image Upload -->
            <VBox spacing="10" alignment="CENTER">
                <Label style="-fx-font-size: 14; -fx-text-fill: #34495E;" text="Upload an Image" />
                <ImageView fx:id="inventory_imageView"
                           fitHeight="120"
                           fitWidth="180"
                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 8;" />
                <Button fx:id="inventory_importBtn"
                        onAction="#handleUploadImage"
                        style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 6;"
                        text="Upload Image" />
            </VBox>

            <!-- Save Button -->
            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="inventory_addBtn"
                        onAction="#AddProduct"
                        style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 6;"
                        text="Save Post" />
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>