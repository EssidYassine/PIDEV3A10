<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Client.GS.GetServiceController">

    <children>
        <Label layoutX="350.0" layoutY="20.0"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333;"
               text="Liste des Services" />

        <Button layoutX="20.0" layoutY="20.0"
                onAction="#retourVersAjoutService"
                style="-fx-background-color: #284386; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 15px;"
                text="← Retour" />

        <!-- Conteneur principal avec GridPane -->
        <ScrollPane layoutX="20.0" layoutY="70.0" prefHeight="600.0" prefWidth="860.0"
                    style="-fx-background: white; -fx-border-color: #ccc; -fx-border-radius: 10;">
            <GridPane fx:id="gridPane" hgap="20" vgap="20"
                      style="-fx-background-color: #f4f4f4; -fx-padding: 15px; -fx-border-radius: 10;">
                <columnConstraints>
                    <ColumnConstraints prefWidth="200.0"/>
                    <ColumnConstraints prefWidth="200.0"/>
                    <ColumnConstraints prefWidth="200.0"/>
                </columnConstraints>
            </GridPane>
        </ScrollPane>
    </children>
</AnchorPane>
