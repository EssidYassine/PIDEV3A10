<AnchorPane prefHeight="700.0" prefWidth="1086.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ChangePasswordController">
    <children>
        <ImageView fitHeight="500.0" fitWidth="614.0" layoutX="499.0" layoutY="39.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Images/EVENTUS-removebg-preview.png" />
            </image>
        </ImageView>
        <VBox alignment="CENTER" layoutX="84.0" layoutY="115.0" spacing="20.0">
            <children>
                <Text fill="#1464db" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="Changer le mot de passe">
                    <font>
                        <Font name="Cambria" size="43.0" />
                    </font>
                </Text>
                <VBox spacing="10.0">
                    <children>
                        <Label text="E-mail" textFill="#1464db">
                            <font>
                                <Font name="Cambria" size="15.0" />
                            </font>
                        </Label>
                        <TextField fx:id="emailField" prefHeight="36.0" prefWidth="300.0">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </TextField>
                    </children>
                </VBox>
                <VBox spacing="10.0">
                    <children>
                        <Label text="Nouveau mot de passe" textFill="#1464db">
                            <font>
                                <Font name="Cambria" size="15.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="newPasswordField" prefHeight="36.0" prefWidth="300.0" />
                        <Label fx:id="errorPasswordLabel" prefHeight="18.0" prefWidth="338.0" textFill="RED" />
                    </children>
                </VBox>
                <Button fx:id="changePasswordButton" minHeight="50.0" minWidth="300.0" mnemonicParsing="false" onAction="#handleChangePassword" prefHeight="50.0" prefWidth="390.0" style="-fx-background-color: #1e0fc8; -fx-font-weight: bold; -fx-padding: 10; -fx-font-size: 24; -fx-text-fill: white;" text="CHANGER LE MOT DE PASSE">
                    <font>
                        <Font name="Cambria" size="24.0" />
                    </font>
               <cursor>
                  <Cursor fx:constant="OPEN_HAND" />
               </cursor>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
