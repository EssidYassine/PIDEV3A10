<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="602.0" prefWidth="495.0" style="-fx-background-color: ef4e00;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Admin.GP.CreatePackController">

   <children>
      <VBox alignment="CENTER" layoutX="107.0" layoutY="36.0" prefHeight="537.0" prefWidth="386.0" spacing="20"
