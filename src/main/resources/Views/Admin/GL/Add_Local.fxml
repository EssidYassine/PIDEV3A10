<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/javafx"
          xmlns="http://javafx.com/javafx/8.0.171"
          fx:controller="Controllers.Admin.GL.AddLocal"
          alignment="center"
          hgap="10"
          vgap="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Titre -->
    <Label text="Ajouter un Local" GridPane.columnSpan="2"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Adresse -->
    <Label text="Adresse:" GridPane.rowIndex="1"/>
    <TextField fx:id="TFAdresse" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Capacité -->
    <Label text="Capacité:" GridPane.rowIndex="2"/>
    <TextField fx:id="TFCapacite" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- Type -->
    <Label text="Type:" GridPane.rowIndex="3"/>
    <TextField fx:id="TFType" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Photo -->
    <Label text="Photo:" GridPane.rowIndex="4"/>
    <HBox spacing="10.0" GridPane.rowIndex="4" GridPane.columnIndex="1">
        <Button text="Choisir une image" fx:id="btnChoisirImage" onAction="#choisirImage"/>
    </HBox>

    <!-- ImageView pour afficher l’image choisie -->
    <ImageView fx:id="imageViewLocal" GridPane.rowIndex="5" GridPane.columnSpan="2"
               fitWidth="200" fitHeight="150"
               preserveRatio="true" />

    <!-- Équipements -->
    <Label text="Équipements:" GridPane.rowIndex="6"/>
    <TextField fx:id="TFEquipements" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <!-- Tarifs -->
    <Label text="Tarifs:" GridPane.rowIndex="7"/>
    <TextField fx:id="TFTarifs" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <!-- Boutons -->
    <HBox spacing="10.0" GridPane.rowIndex="8" GridPane.columnSpan="2">
        <Button text="Ajouter" onAction="#ajouter"/>
    </HBox>

</GridPane>

