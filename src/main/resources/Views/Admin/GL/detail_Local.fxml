<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="618.0" prefWidth="943.0" style="-fx-background-color: #FAFAFA;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Admin.GL.DetailController">

    <children>
        <!-- Image du local -->
        <ImageView fx:id="localImage" fitHeight="400.0" fitWidth="900.0"
                   pickOnBounds="true" preserveRatio="true"
                   style="-fx-border-radius: 12px;"/>

        <!-- Card Container for Local Details -->
        <VBox layoutX="20.0" layoutY="420.0" spacing="10"
              style="-fx-background-color: #FFFFFF; -fx-padding: 20px;
                     -fx-background-radius: 12px; -fx-border-color: #E0E0E0;
                     -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

            <!-- Address Label -->
            <Label fx:id="adresseLabel" text="Adresse"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

            <!-- Other Information -->
            <Label fx:id="capaciteLabel" text="Capacité: "
                   style="-fx-font-size: 16px; -fx-text-fill: #666666;"/>
            <Label fx:id="typeLabel" text="Type: "
                   style="-fx-font-size: 16px; -fx-text-fill: #666666;"/>
            <Label fx:id="tarifsLabel" text="Tarifs: "
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #FF385C;"/>
            <Label fx:id="equipementLabel" text="Équipement: "
                   style="-fx-font-size: 16px; -fx-text-fill: #666666;"/>
        </VBox>

        <!-- Back Button -->
        <HBox layoutX="20.0" layoutY="650.0">
            <Button text="Retour" onAction="#retour"
                    style="-fx-background-color: #FF385C; -fx-text-fill: white;
                           -fx-font-size: 14px; -fx-font-weight: bold;
                           -fx-background-radius: 8px; -fx-padding: 8px 20px;
                           -fx-border-width: 0;">
            </Button>
        </HBox>

    </children>
</AnchorPane>
