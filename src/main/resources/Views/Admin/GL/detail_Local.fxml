<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane prefHeight="618.0" prefWidth="943.0" style="-fx-background-color: #FAFAFA;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Admin.GL.DetailController">

    <children>
        <Label layoutX="350.0" layoutY="20.0" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #333;" text="À propos de Local" />

        <!-- ScrollPane for proper scrolling behavior -->
        <ScrollPane layoutX="20.0" layoutY="70.0" prefHeight="530.0" prefWidth="900.0" fitToWidth="true" fitToHeight="true" style="-fx-background: white; -fx-border-color: #ccc; -fx-border-radius: 10;">
            <VBox spacing="20" style="-fx-padding: 20px; -fx-background-color: #FFFFFF;">

                <!-- Image du local -->
                <ImageView fx:id="localImage" fitHeight="400.0" fitWidth="860.0"
                           pickOnBounds="true" preserveRatio="true"
                           style="-fx-border-radius: 12px;"/>

                <!-- Card Container for Local Details -->
                <VBox spacing="10" style="-fx-padding: 20px; -fx-background-radius: 12px; -fx-border-color: #E0E0E0; -fx-border-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label fx:id="adresseLabel" text="Adresse"
                           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                    <Label fx:id="capaciteLabel" text="Capacité: "
                           style="-fx-font-size: 16px; -fx-text-fill: #666666;"/>
                    <Label fx:id="typeLabel" text="Type: "
                           style="-fx-font-size: 16px; -fx-text-fill: #666666;"/>
                    <Label fx:id="tarifsLabel" text="Tarifs: "
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #FF385C;"/>
                    <Label fx:id="equipementLabel" text="Équipement: "
                           style="-fx-font-size: 16px; -fx-text-fill: #666666;"/>
                </VBox>
            </VBox>
        </ScrollPane>

        <!-- Back Button with improved layout -->
        <Button layoutX="20.0" layoutY="620.0" text="Retour" onAction="#retour"
                style="-fx-background-color: #FF385C; -fx-text-fill: white;
                       -fx-font-size: 14px; -fx-font-weight: bold;
                       -fx-background-radius: 8px; -fx-padding: 8px 20px;
                       -fx-border-width: 0;"/>
    </children>
</AnchorPane>
