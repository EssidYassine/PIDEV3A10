<AnchorPane prefHeight="651.0" prefWidth="994.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
   <children>
      <Pane layoutX="616.0" prefHeight="642.0" prefWidth="464.0" style="-fx-background-color: #d7e3f5;">
         <children>
            <TextField fx:id="mailid" layoutX="76.0" layoutY="279.0" prefHeight="37.0" prefWidth="312.0"
                       style="-fx-background-color: #F4F1EA; -fx-font-family: 'Georgia', serif;">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </TextField>

            <Text fill="#1464db" layoutX="157.0" layoutY="188.0" strokeType="OUTSIDE" strokeWidth="0.0"
                  style="-fx-font-weight: bold;" text="WELCOME">
               <font>
                  <Font size="32.0" />
               </font>
            </Text>

            <Text fill="#1464db" layoutX="111.0" layoutY="215.0" strokeType="OUTSIDE" strokeWidth="0.0"
                  style="-fx-font-weight: bold;" text="Login to your account to continue">
               <font>
                  <Font name="Cambria" size="16.0" />
               </font>
            </Text>

            <Label layoutX="76.0" layoutY="250.0" text="E-mail" textFill="#1464db">
               <font>
                  <Font name="Cambria" size="15.0" />
               </font>
            </Label>

            <Label layoutX="76.0" layoutY="331.0" text="Password" textFill="#1464db">
               <font>
                  <Font name="Cambria" size="15.0" />
               </font>
            </Label>

            <PasswordField fx:id="passeid" layoutX="76.0" layoutY="358.0" prefHeight="37.0" prefWidth="312.0"
                           style="-fx-font-family: 'Georgia', serif; -fx-background-color: #F4F1EA;">
            </PasswordField>

            <CheckBox fx:id="showid" layoutX="332.0" layoutY="365.0">
               <graphic>
                  <ImageView fitHeight="26.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/Images/eye.png" />
                     </image>
                  </ImageView>
               </graphic>
            </CheckBox>

            <Button fx:id="connecterid" layoutX="76.0" layoutY="419.0" mnemonicParsing="false" onAction="#seConnecter"
                    prefHeight="37.0" prefWidth="312.0" style="-fx-background-color: #1464db;" text="SE CONNECTER" textFill="WHITE">
               <font>
                  <Font name="Cambria" size="15.0" />
               </font>
            </Button>

            <Button fx:id="inscrireid" layoutX="376.0" layoutY="591.0" mnemonicParsing="false" text="S'inscrire"
                    textFill="#1464db" styleClass="underline-button" stylesheets="@/styles/stylee.css" />

            <Button layoutX="181.0" layoutY="459.0" mnemonicParsing="false" onAction="#forgotPasswordButtonAction"
                    prefHeight="25.0" prefWidth="110.0" text="Forgot password" textFill="#1464db"
                    styleClass="underline-button" stylesheets="@/styles/stylee.css" />

            <Label fx:id="errorLabel" layoutX="172.0" layoutY="323.0" prefHeight="17.0" textFill="RED" />
         </children>
      </Pane>

      <ImageView fitHeight="651.0" fitWidth="506.0" layoutX="110.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/Images/image1.jpeg" />
         </image>
      </ImageView>
   </children>
   <effect>
      <Blend />
   </effect>
</AnchorPane>
