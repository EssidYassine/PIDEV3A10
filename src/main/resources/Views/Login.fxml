<AnchorPane prefHeight="700.0" prefWidth="1083.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
   <children>
      <Pane layoutX="-2.0" prefHeight="700.0" prefWidth="1086.0" style="-fx-background-color: white;">
         <children>
            <VBox alignment="CENTER" layoutX="74.0" layoutY="105.0" spacing="20.0">
               <children>
                  <Text fill="#1464db" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="WELCOME">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Text>
                  <Text fill="#1464db" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="Login to your account to continue">
                     <font>
                        <Font name="Cambria" size="16.0" />
                     </font>
                  </Text>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="E-mail" textFill="#1464db">
                           <font>
                              <Font name="Cambria" size="15.0" />
                           </font>
                        </Label>
                        <TextField fx:id="mailid" prefWidth="300.0" style="-fx-background-color: #F4F1EA; -fx-font-family: 'Georgia', serif;">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </TextField>
                        <Label fx:id="errorEmailLabel" textFill="RED" />
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Password" textFill="#1464db">
                           <font>
                              <Font name="Cambria" size="15.0" />
                           </font>
                        </Label>
                        <PasswordField fx:id="passeid" prefWidth="300.0" style="-fx-font-family: 'Georgia', serif; -fx-background-color: #F4F1EA;" />
                        <Label fx:id="errorPasswordLabel" textFill="RED" />
                     </children>
                  </VBox>
                  <Button fx:id="connecterid" mnemonicParsing="false" onAction="#seConnecter" prefWidth="300.0" style="-fx-background-color: #1e0fc8;" text="SE CONNECTER" textFill="WHITE">
                     <font>
                        <Font name="Cambria" size="24.0" />
                     </font>
                  </Button>
                  <Button fx:id="inscrireid" mnemonicParsing="false" prefHeight="24.0" prefWidth="117.0" style="-fx-background-color: ED4E00;" styleClass="underline-button" stylesheets="@/styles/stylee.css" text="S'inscrire" textFill="WHITE">
                     <font>
                        <Font name="Cambria" size="18.0" />
                     </font></Button>
                  <Button mnemonicParsing="false"  style="-fx-background-color: transparent;" styleClass="underline-button" stylesheets="@/styles/stylee.css" text="Forgot password" textFill="#1e0fc8" underline="true">
                     <font>
                        <Font name="Calibri" size="14.0" />
                     </font></Button>
                  <Label fx:id="errorLabel" textFill="RED" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            <ImageView fitHeight="500.0" fitWidth="614.0" layoutX="499.0" layoutY="39.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/EVENTUS-removebg-preview.png" />
               </image>
            </ImageView>
            <CheckBox fx:id="showid" alignment="CENTER_RIGHT" layoutX="406.0" layoutY="336.0" style="-fx-region-border: 12;" />
            <ImageView fitHeight="26.0" fitWidth="38.0" layoutX="423.0" layoutY="332.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/eye.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </children>
